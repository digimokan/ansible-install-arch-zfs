# Global Menu Options

set timeout=5
set default=0

# Local Variables

set search_args="--label --set=root {{ grub_install_def_zpool_name }}"
set stable_kernel="/ROOT/default/@/boot/vmlinuz-linux"
set root_mount="zfs={{ grub_install_def_zpool_name }}/ROOT/default rw"
set norm_initramfs="/ROOT/default/@/boot/initramfs-linux.img"

# Menu Entries

menuentry "Arch Linux Stable ZFS Kernel (+ Normal Initramfs)" {
  search ${search_args}
  linux ${stable_kernel} ${root_mount}
  initrd ${norm_initramfs}
}

